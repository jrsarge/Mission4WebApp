@model GradeCalculatorModel;

<h3>Final Grade Calculator:</h3>

<!--Set up the inputs for the jquery-->
<form method="post">
    <h5>Final Grade:</h5>
    <p id="output" name="output"></p>

    <label>Assignments Grade (%):</label>
    <input id="assignment" asp-for="assignment" /><br />

    <label>Quizzes Grade (%):</label>
    <input id="quiz" asp-for="quiz" /><br />

    <label>Group Projects Grade (%):</label>
    <input id="group" asp-for="group"/><br />

    <label>INTEX Grade (%):</label>
    <input id="intex" asp-for="intex"/><br />

    <label>Midterm Exam Grade (%):</label>
    <input id="midterm" asp-for="midterm"/><br />

    <label>Final Exam Grade (%):</label>
    <input id="final" asp-for="final"/><br />

    <input id="send" type="submit" value="Calculate Grade" />

    @*allows data validation to be used*@
    <div asp-validation-summary="All"></div>
</form>

<script src="js/GradeCalculator.js"></script>